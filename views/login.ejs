<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%- include("layout/header") -%>

  <body id="page-top">
    <!-- Navigation-->
    <%- include("layout/navbar") -%>

    <!-- Contact-->
    <section class="page-section" id="contact">
      <div class="container">
        <form
          id="contactForm"
          action="/signUp"
          method="POST"
          data-sb-form-api-token="API_TOKEN"
        >
          <div class="row align-items-stretch mb-5">
            <div class="col-md-12">
              <div class="text-center">
                <h2 class="section-heading text-uppercase">Registration</h2>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <!-- Email address input-->
                    <input
                      class="form-control"
                      id="username"
                      name="username"
                      type="text"
                      placeholder="Your username "
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <!-- Name input-->
                    <input
                      class="form-control"
                      name="password"
                      id="password"
                      type="password"
                      placeholder="Your Password *"
                      data-sb-validations="required"
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <!-- Name input-->
                    <input
                      class="form-control"
                      name="repPassword"
                      id="password"
                      type="password"
                      placeholder="Your Password *"
                      data-sb-validations="required"
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <select id="inputType" class="form-control" name="type">
                      <option name="driver" selected>Driver</option>
                      <option name="examiner">Examiner</option>
                      <option name="admin">Admin</option>
                    </select>
                  </div>
                </div>
              </div>
              <% if(checkVal.passConf) {%>
              <div class="col-md-12">
                <h6 style="color: red">
                  repeat password and password must be same
                </h6>
              </div>
              <% } %>
              <div class="text-center">
                <button
                  class="btn btn-primary btn-xl text-uppercase"
                  id="submitButton"
                  type="submit"
                >
                  submit
                </button>
              </div>
            </div>
        </form>
        <form action="/signIn"
        method="POST">
            <div class="col-md-12">
              <div class="text-center">
                <h2 class="section-heading text-uppercase">Login</h2>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <!-- Email address input-->
                  <input
                    class="form-control"
                    id="username"
                    name="username"
                    type="text"
                    placeholder="Your username "
                  />
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <!-- Name input-->
                  <input
                    class="form-control"
                    name="password"
                    id="password"
                    type="password"
                    placeholder="Your Password *"
                    data-sb-validations="required"
                  />
                </div>
              </div>
              <% if(checkVal.passInval) {%>
              <div class="col-md-12">
                <h6 style="color: red">checkVal credentials.</h6>
              </div>
              <% } %>
              <div class="text-center">
                <button
                  class="btn btn-primary btn-xl text-uppercase"
                  id="submitButton"
                  type="submit"
                >
                  submit
                </button>
              </div>
            </div>
          </div>
          <!-- Submit success message-->
          <!---->
          <!-- This is what your users will see when the form-->
          <!-- has successfully submitted-->
          <div class="d-none" id="submitSuccessMessage">
            <div class="text-center text-white mb-3">
              <div class="fw-bolder">Form submission successful!</div>
              To activate this form, sign up at
              <br />
              <a href="https://startbootstrap.com/solution/contact-forms"
                >https://startbootstrap.com/solution/contact-forms</a
              >
            </div>
          </div>
          <!-- Submit error message-->
          <!---->
          <!-- This is what your users will see when there is-->
          <!-- an error submitting the form-->
        </form>
      </div>
    </section>
    <!-- Footer-->
    <%- include("layout/footer") -%>

    <!-- Bootstrap core JS-->
    <%- include("layout/script") -%>
  </body>
</html>
